{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EventEnvelope",
  "type": "object",
  "required": [
    "type",
    "ts",
    "run_id"
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "run_id": {
      "type": "string"
    },
    "job_id": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    }
  }
}
